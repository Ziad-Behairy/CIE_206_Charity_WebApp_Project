@page
@model CIE_206.Pages.AnyUserView.VolunteerPageModel
@{
}

<style>
    h1, p {
        text-align: right;
    }

    .form-control {
        width: 50%;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .form-group {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        flex-wrap: wrap;
    }

    label {
        width: 100%;
    }
</style>


<h1>اهلا بك في جمعية عائلتي</h1>
<p> هدف جمعية "عائلتي" الخيرية هو مساعدة الأشخاص المحتاجين وتحسين حياتهم.</p>
<p>ملاحظة سوف نقوم بالاتصال بك علي رقم الهاتف او سيتم التواصل عن طريق البريد الالكتروني لاتمام التبرع</p>
<form method="post" style="text-align: right;">
    <div class="form-group" style="display: none;">
        <label for="id">ID:</label>
        <input type="hidden" class="form-control" id="id" name="Id" />
        @*<input type="hidden" class="form-control" id="id" name="Id"  value="@Model.Id">*@
    </div>
    <div class="row">
        <div class="col-xs-6 form-group">
            <label for="FirstName">الاسم الاخير</label>
            <input type="text" class="form-control" id="firstname" name="FirstName" dir="rtl">
        </div>
        <div class="col-xs-6 form-group">
            <label for="LastName">الاسم الاول</label>
            <input type="text" class="form-control" id="lastname" name="LastName" dir="rtl">
        </div>
    </div>

    <div class="form-group">
        <label for="PhoneNumber">رقم الهاتف</label>
        <input type="text" class="form-control" id="phonenumber" name="PhoneNumber" dir="rtl">
    </div>
    <div class="form-group">
        <label for="Email">البريد الالكتروني</label>
        <input type="email" class="form-control" id="email" name="Email">
    </div>
    <div class="form-group">
        <label for="Address">العــــنوان</label>
        <input type="text" class="form-control" id="address" name="Address" dir="rtl">
    </div>
        <div class="form-group">
        <label for="volunteertype">اختر نوع التطوع</label>
        <select class="form-control" id="volunteertype" name="volunteertype" style="text-align: right;">
            <option value="teach"> تعليم الاسر</option>
            <option value="help">مساعدة في التوزيع</option>

        </select>
    </div>
    
    
    <br />
    <div class="col-xs-6">
        <button class="btn btn-primary" style="font-size: 20px;">تأكيد</button>
    </div>
    <br />    <br />    <br />    <br />
    
</form>

