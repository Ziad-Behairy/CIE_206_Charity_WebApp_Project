                <textarea class="my-textarea" placeholder="أكتب التعريف بالشركة" name="abouttwo"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-2">
                <label class="my-label"> القسم الثالث </label>
            </div>
            <div class="col-xs-10">
                <textarea class="my-textarea" placeholder="أكتب التعريف بالشركة" name="aboutthree"></textarea>
            </div>
        </div>

        <div class="btn-area">
            <button class="btn-blue submit">حفظ </button>
        </div>
    </form>
</div>