            @for (int i = 0; i < @Model.dt.Rows.Count; i++)
            {
                <tr>
                    
                    
                     <td>@Model.dt.Rows[i][0]</td>
                     
                    <td >@Model.dt.Rows[i][1] </td>

                    <td scope="row">@Model.dt.Rows[i][2]</td>
                    <td>@Model.dt.Rows[i][3]</td>
                    <td>@Model.dt.Rows[i][4]</td>
                    <td>@Model.dt.Rows[i][5]</td>
                    <td>@Model.dt.Rows[i][6]</td>





                    <td>

                        <a asp-page="/CharityWorkersView/DEL_EMPLOYEE" asp-route-id="@Model.dt.Rows[i][2]"> حذف  </a>
                        <a asp-page="/CharityWorkersView/DEL_EMPLOYEE" asp-route-id="@Model.dt.Rows[i][2]"> | تعديل</a>

                    </td>
                    

                </tr>
            }
        </tbody>
    </table>





